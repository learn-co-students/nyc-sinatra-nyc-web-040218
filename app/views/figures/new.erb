<form action="/figures" method="post">
  <p>Figure Name: <input type="text" name="figure[name]" id="figure_name"></p>

  <p>Title: <input type="text" name="title[name]" id="new_title"></p>
  <% @titles.each do |title| %>
    <div>
      <input type="checkbox" id="title_<%= "#{title.id}" %>" name="figure[title_ids][]" value="<%= title.id %>">
      <label for="title_name"><%= title.name %></label>
    </div>
  <% end %>

  <p>Landmark: <input type="text" name="landmark[name]" id="new_landmark"></p>

  <% @landmarks.each do |landmark| %>
    <div>
      <input type="checkbox" id="landmark_<%= "#{landmark.id}" %>" name="figure[landmark_ids][]" value="<%= landmark.id%>">
      <label for="landmark_name"><%= landmark.name %></label>
    </div>
  <% end %>

