<h1><%= @figure.name %></h1>

<% if @figure.landmarks %>
  <ul>
  <h4>Landmarks</h4>
    <% @figure.landmarks.each do |lm| %>
    <li><%= lm.name %></li>
    <% end %>
  </ul>
<% end %>

<br><br>

<% if @figure.titles %>
  <ul>
  <h4>Titles</h4>
    <% @figure.titles.each do |title| %>
      <li><%= title.name %></li>
    <% end %>
  </ul>
<% end %>

<p>
  <a href="/figures/<%= @figure.id %>/edit">Edit</a>
</p>

<p>
  <a href="/figures">View All figures</a>
</p>